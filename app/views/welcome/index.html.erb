<ul class="nav nav-pills" role="tablist">
  <li><%= link_to "All", destinations_path %></li>
  <li><%= link_to "New Zealand", destinations_path(country: "new_zealand") %></li>
  <li><%= link_to "France", destinations_path(country: "france") %></li>
</ul>

<div>
    <ul>
    <% @countries.each do |country| %>
        <li><%= country %></li>
    <% end %>
    </ul>
</div>

<table class="table">
  <tr>
    <% @united_states.each do |key,value| %>
	  <th><%= key.titleize %></th>
    <% end %>
  </tr>
  <tr>
    <% @united_states.each do |key,value| %>      
      <% if value.kind_of?(Array) %>
          <td><%= value.join(", ") %></td>
      <% else %>
         <td><%= value %></td>
      <% end %> 
    <% end %>
  </tr>
</table>


<div class="container">
    <% @liberia_tourism.each do |tourist_attraction| %>
    <div class="row">
        <div class="col-md-3">
            <div class="well well-lg">
                <%= image_tag tourist_attraction, alt: "tourist_attraction", id: "liberia", class: "country" %>
            </div>
        </div>
    </div>
    <% end %>
</div>

