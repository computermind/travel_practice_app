<%= form_for(@destination) do |f| %>
  <% if @destination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>
      <ul>
      <% @destination.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :city, placeholder: "City", class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :country, placeholder: "Country", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.number_field :population, placeholder: "Population", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, placeholder: "Describe your destination...", class: "form-control", rows: "10" %>
  </div>
  <div class="form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
